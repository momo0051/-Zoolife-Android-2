<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
<androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#009FE3"
        android:gravity="center">

        <RelativeLayout
            android:id="@+id/back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_alignParentStart="true"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/d15"
                android:background="@drawable/right_arrow"
                app:tint="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="المزيد‎"
                android:textColor="@color/white"
                android:textSize="20sp" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/dt10"
        >



        <RelativeLayout
            android:id="@+id/addAdLayout"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:gravity="right|center"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/ripple_effect"
            android:paddingRight="10dp">

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:id="@+id/all_post_img"
                android:layout_marginLeft="10dp"
                android:layout_alignParentRight="true"
                app:tint="#009FE3"
                android:src="@drawable/plus"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_ad"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_toLeftOf="@id/all_post_img"/>

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/left_arrow"
                app:tint="@color/gray"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="@dimen/d5"
                android:layout_marginEnd="@dimen/d15"
                android:id="@+id/left_img"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_grey"/>

        <RelativeLayout
            android:id="@+id/favouriteLayout"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/ripple_effect"
            android:orientation="horizontal"
            android:gravity="right|center"
            android:paddingRight="10dp">

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:id="@+id/item5"
                android:layout_marginLeft="10dp"
                android:layout_alignParentRight="true"
                app:tint="#009FE3"
                android:src="@drawable/ic_heart"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/favourite_ad"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_toLeftOf="@id/item5"/>

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/left_arrow"
                app:tint="@color/gray"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="@dimen/d5"
                android:layout_marginEnd="@dimen/d15" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_grey"/>

        <RelativeLayout
            android:id="@+id/myAdsLayout"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:gravity="right|center"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/ripple_effect"
            android:paddingRight="10dp">

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:id="@+id/item3"
                android:layout_marginLeft="10dp"
                app:tint="#009FE3"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_user"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/my_ads"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_toLeftOf="@id/item3"/>

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/left_arrow"
                app:tint="@color/gray"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="@dimen/d5"
                android:layout_marginEnd="@dimen/d15" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_grey"/>

        <RelativeLayout
            android:id="@+id/changeCityLayout"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:gravity="right|center"
            android:paddingRight="10dp"
            android:visibility="gone"
            android:background="@drawable/ripple_effect">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="@dimen/d5"
                android:layout_marginEnd="@dimen/d15"
                android:src="@drawable/left_arrow"
                app:tint="@color/gray" />

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:id="@+id/user_img"
                android:layout_marginLeft="10dp"
                app:tint="#009FE3"
                android:layout_alignParentRight="true"
                android:src="@drawable/pin"/>

            <TextView
                android:id="@+id/tvUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/change_city"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_toLeftOf="@id/user_img"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_grey"/>


        <RelativeLayout
            android:id="@+id/orderLayout"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/ripple_effect"
            android:gravity="right|center"
            android:paddingRight="10dp">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="@dimen/d5"
                android:layout_marginEnd="@dimen/d15"
                android:src="@drawable/left_arrow"
                app:tint="@color/gray" />

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:id="@+id/orderimg"
                android:layout_marginLeft="10dp"
                android:layout_alignParentRight="true"
                app:tint="#009FE3"
                android:src="@drawable/shopping_bag"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/order_delivery"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_toLeftOf="@id/orderimg"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_grey"/>

        <RelativeLayout
            android:id="@+id/ordervetLayout"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/ripple_effect"
            android:gravity="right|center"
            android:paddingRight="10dp">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="@dimen/d5"
                android:layout_marginEnd="@dimen/d15"
                android:src="@drawable/left_arrow"
                app:tint="@color/gray" />

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:id="@+id/add_img"
                android:layout_marginLeft="10dp"
                android:layout_alignParentRight="true"
                app:tint="#009FE3"
                android:src="@drawable/choice"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/order_vet_consultant"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_toLeftOf="@id/add_img"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_grey"/>

        <RelativeLayout
            android:id="@+id/myAccountLayout"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/ripple_effect"
            android:orientation="horizontal"
            android:gravity="right|center"
            android:paddingRight="10dp">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="@dimen/d5"
                android:layout_marginEnd="@dimen/d15"
                android:src="@drawable/left_arrow"
                app:tint="@color/gray" />

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:id="@+id/item4"
                android:layout_marginLeft="10dp"
                android:layout_alignParentRight="true"
                app:tint="#009FE3"
                android:src="@drawable/exclamation"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/report_missing_pet"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_toLeftOf="@id/item4"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_grey"/>

        <RelativeLayout
            android:id="@+id/bannedAdsLayout"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/ripple_effect"
            android:gravity="right|center"
            android:paddingRight="10dp">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="@dimen/d5"
                android:layout_marginEnd="@dimen/d15"
                android:src="@drawable/left_arrow"
                app:tint="@color/gray" />

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:id="@+id/item7"
                android:layout_marginLeft="10dp"
                android:layout_alignParentRight="true"
                app:tint="#009FE3"
                android:src="@drawable/alert"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/banned_ads"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_toLeftOf="@id/item7"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_grey"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:clickable="true"
            android:focusable="true"
            android:visibility="gone"
            android:background="@drawable/ripple_effect"
            android:gravity="right|center"
            android:paddingRight="10dp">

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="@dimen/d5"
                android:layout_marginEnd="@dimen/d15"
                android:src="@drawable/left_arrow"
                app:tint="@color/gray" />

            <ImageView
                android:id="@+id/item"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginLeft="10dp"
                android:layout_alignParentRight="true"
                app:tint="#009FE3"
                android:src="@drawable/ban"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/black_list"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_toLeftOf="@id/item"/>

        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_grey"/>

        <RelativeLayout
            android:id="@+id/tNcLayout"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/ripple_effect"
            android:orientation="horizontal"
            android:gravity="right|center"
            android:paddingRight="10dp">

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="@dimen/d5"
                android:layout_marginEnd="@dimen/d15"
                android:src="@drawable/left_arrow"
                app:tint="@color/gray" />

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:id="@+id/item6"
                android:layout_marginLeft="10dp"
                android:layout_alignParentRight="true"
                app:tint="#009FE3"
                android:src="@drawable/docs"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/policy_terms"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_toLeftOf="@id/item6"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_grey"/>


        <RelativeLayout
            android:id="@+id/callUsLayout"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/ripple_effect"
            android:gravity="right|center"
            android:paddingRight="10dp">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="@dimen/d5"
                android:layout_marginEnd="@dimen/d15"
                android:src="@drawable/left_arrow"
                app:tint="@color/gray" />

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:id="@+id/item8"
                android:layout_marginLeft="10dp"
                android:layout_alignParentRight="true"
                app:tint="#009FE3"
                android:src="@drawable/callus"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/call_us"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_toLeftOf="@id/item8"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_grey"/>

        <RelativeLayout
            android:id="@+id/logoutLayout"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/ripple_effect"
            android:gravity="right|center"
            android:paddingRight="10dp">

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:id="@+id/logout"
                app:tint="@color/red"
                android:layout_marginLeft="10dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_logout"/>

            <TextView
                android:id="@+id/logoutTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/logout"
                android:textSize="18sp"
                android:textColor="@color/red"
                android:layout_toLeftOf="@id/logout"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="25dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="@string/app_name"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="v1.0"/>

        </LinearLayout>

    </LinearLayout>
    </LinearLayout>

</androidx.core.widget.NestedScrollView>
</FrameLayout>