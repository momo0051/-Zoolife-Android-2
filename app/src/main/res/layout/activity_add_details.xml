<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/d60"
                android:background="#009FE3"
                android:orientation="horizontal"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">


                <RelativeLayout
                    android:id="@+id/backBtn"
                    android:layout_width="50dp"
                    android:layout_height="60dp"
                    android:layout_alignParentStart="true"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="@dimen/d25"
                        android:layout_height="@dimen/d25"
                        android:layout_gravity="center"
                        android:src="@drawable/right_arrow" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="300dp"
                    android:layout_height="60dp"
                    android:layout_centerInParent="true"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/toolbar_title"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:text="ZOOLIFE"
                        android:textAlignment="center"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="50dp"
                    android:layout_height="60dp"
                    android:layout_alignParentEnd="true"
                    android:visibility="gone"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="@dimen/d25"
                        android:layout_height="@dimen/d25"
                        android:layout_gravity="center"
                        android:src="@drawable/share"
                        app:tint="@color/white" />

                </RelativeLayout>


            </RelativeLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/dt10"
                android:paddingTop="@dimen/dt10"
                android:paddingRight="@dimen/dt10">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:background="@drawable/profile_img_background"
                            android:src="@drawable/profile_img" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="10dp"
                            android:layout_weight=".75"
                            android:gravity="start|center_vertical"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/idUser"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:id="@+id/city"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/d10">

                        <ImageView
                            android:id="@+id/chat_box"
                            android:layout_width="@dimen/d50"
                            android:layout_height="@dimen/d50"
                            android:layout_alignParentBottom="true"
                            android:src="@drawable/chat_message_sent_drawable"
                            android:visibility="gone" />

                        <ImageView
                            android:id="@+id/chat_icon"
                            android:layout_width="@dimen/d50"
                            android:layout_height="@dimen/d50"
                            android:layout_alignParentBottom="true"
                            android:paddingTop="@dimen/d10"
                            android:paddingBottom="@dimen/d10"
                            android:src="@drawable/messenger_icon"
                            android:visibility="gone" />


                        <ImageView
                            android:id="@+id/call_box"
                            android:layout_width="@dimen/d50"
                            android:layout_height="@dimen/d50"
                            android:layout_alignParentBottom="true"
                            android:layout_marginRight="16dp"
                            android:layout_toLeftOf="@id/chat_box"
                            android:src="@drawable/chat_message_sent_drawable"
                            android:visibility="gone" />

                        <ImageView
                            android:id="@+id/call_icon"
                            android:layout_width="@dimen/d50"
                            android:layout_height="@dimen/d50"
                            android:layout_alignParentBottom="true"
                            android:layout_marginRight="16dp"
                            android:layout_toLeftOf="@id/chat_box"
                            android:paddingTop="@dimen/d10"
                            android:paddingBottom="@dimen/d10"
                            android:src="@drawable/phone_call_icon"
                            android:visibility="gone" />

                        <ImageView
                            android:id="@+id/whatsapp_box"
                            android:layout_width="@dimen/d50"
                            android:layout_height="@dimen/d50"
                            android:layout_alignParentBottom="true"
                            android:layout_marginRight="16dp"
                            android:layout_toLeftOf="@id/call_box"
                            android:src="@drawable/chat_message_sent_drawable" />

                        <ImageView
                            android:id="@+id/whatsapp_icon"
                            android:layout_width="@dimen/d50"
                            android:layout_height="@dimen/d50"
                            android:layout_alignParentBottom="true"
                            android:layout_marginRight="16dp"
                            android:layout_toLeftOf="@id/call_box"
                            android:paddingTop="@dimen/d10"
                            android:paddingBottom="@dimen/d10"
                            android:src="@drawable/whatsapp_icon" />

                    </RelativeLayout>


                    <TextView
                        android:id="@+id/titleTv"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dt18"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/descriptionTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dt20"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/dt18" />

                    <ImageView
                        android:id="@+id/addImage"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/d240"
                        android:layout_marginTop="@dimen/dt20"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"
                        android:visibility="visible" />


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/more_imagesRV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dt20" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dt20"
                        android:orientation="horizontal"
                        android:padding="@dimen/dt10"
                        android:weightSum="3">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:padding="@dimen/dtp5">

                            <ImageView
                                android:id="@+id/ic_like"
                                android:layout_width="wrap_content"
                                android:layout_height="38dp"
                                android:src="@drawable/ic_like_unchecked" />

                            <TextView
                                android:id="@+id/tv_count"
                                android:layout_width="60dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_toRightOf="@id/ic_like"
                                android:text=""
                                android:textColor="@color/black"
                                android:textSize="18sp"
                                android:visibility="gone" />
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/likeBtn"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:padding="@dimen/dtp5"
                            android:src="@drawable/ic_heart" />

                        <ImageView
                            android:id="@+id/iv_report"
                            android:layout_width="0dp"
                            android:layout_height="38dp"
                            android:layout_weight="1"
                            android:padding="@dimen/dtp5"
                            android:src="@drawable/ic_flag" />
                    </LinearLayout>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginTop="@dimen/d20"
                        android:text="تعليقات"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_below="@id/comment_detail_layout"
                        android:layout_marginTop="@dimen/d10"
                        android:background="@color/grey_40" />


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/commentRV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/full_comment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dt20"
                        android:gravity="center_horizontal"
                        android:text="عرض كل التعليقات"
                        android:textColor="@color/appColor"
                        android:textStyle="bold"
                        android:visibility="visible" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dt10"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:orientation="horizontal"
                            android:weightSum="3">

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="@dimen/d150"
                                android:layout_marginEnd="@dimen/dt10"
                                android:layout_weight=".9"
                                android:scaleType="centerCrop"
                                android:src="@drawable/dog" />

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="@dimen/d150"
                                android:layout_marginEnd="@dimen/dt10"
                                android:layout_weight=".9"
                                android:scaleType="centerCrop"
                                android:src="@drawable/dog" />

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="@dimen/d150"
                                android:layout_marginEnd="@dimen/dt10"
                                android:layout_weight=".9"
                                android:scaleType="centerCrop"
                                android:src="@drawable/dog" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dt10"
                            android:gravity="center_horizontal"
                            android:orientation="horizontal"
                            android:weightSum="3">

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="@dimen/d150"
                                android:layout_marginEnd="@dimen/dt10"
                                android:layout_weight=".9"
                                android:scaleType="centerCrop"
                                android:src="@drawable/dog" />

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="@dimen/d150"
                                android:layout_marginEnd="@dimen/dt10"
                                android:layout_weight=".9"
                                android:scaleType="centerCrop"
                                android:src="@drawable/dog" />

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="@dimen/d150"
                                android:layout_marginEnd="@dimen/dt10"
                                android:layout_weight=".9"
                                android:scaleType="centerCrop"
                                android:src="@drawable/dog" />
                        </LinearLayout>


                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/ll_comment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/d20"
                        android:layout_marginBottom="@dimen/d70"
                        android:orientation="vertical">

                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rectangle_rounded_less"
                            android:orientation="horizontal"
                            android:padding="@dimen/dt10"
                            android:weightSum="1">

                            <EditText
                                android:id="@+id/commentET"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_weight=".74"
                                android:background="@null"
                                android:hint="اكتب تعليقك هنا"
                                android:paddingStart="@dimen/d10" />

                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="@color/black" />


                            <TextView
                                android:id="@+id/sendBtn"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight=".25"
                                android:gravity="center"
                                android:text="إرسال"
                                android:textColor="@color/appColor"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </LinearLayout>



                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:paddingStart="@dimen/d10"
                        android:text="اعلانات مشابهة"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/more_imagesRA"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dt20"
                        android:orientation="horizontal" />

                </LinearLayout>

            </ScrollView>
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/CMLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d50"
        android:layout_gravity="bottom"
        android:visibility="gone"
        android:weightSum="2">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="1dp"
            android:layout_weight="1"
            android:background="@color/appColor"
            android:gravity="center"
            android:text="مكالمة هاتفية"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/messageBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="1dp"
            android:layout_weight="1"
            android:background="@color/appColor"
            android:gravity="center"
            android:text="رسالة"
            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/EDLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d50"
        android:layout_gravity="bottom"
        android:visibility="gone"
        android:weightSum="2">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="1dp"
            android:layout_weight="1"
            android:background="@color/appColor"
            android:gravity="center"
            android:text="Edit"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="1dp"
            android:layout_weight="1"
            android:background="@color/appColor"
            android:gravity="center"
            android:text="Delete"
            android:textColor="@color/white" />
    </LinearLayout>


    <ProgressBar
        android:id="@+id/progress_circular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />
</FrameLayout>