<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="180dp"
    android:layout_marginTop="@dimen/d10"
    android:layout_marginBottom="@dimen/d10">



    <RelativeLayout
        android:id="@+id/delivery_card"
        android:background="@drawable/delivery_round_card"
        android:layout_marginStart="@dimen/d10"
        android:layout_marginEnd="@dimen/d10"
        android:layout_marginBottom="@dimen/d20"
        android:layout_below="@+id/delivery_icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/d10"
            android:layout_marginBottom="@dimen/d20">
            <ImageView
                android:id="@+id/ic_location"
                android:layout_width="@dimen/d24"
                android:layout_height="@dimen/d24"
                android:layout_alignParentEnd="true"
                android:src="@drawable/location_pin"/>


            <TextView
                android:id="@+id/delivery_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="city"
                android:textColor="@color/black"
                android:layout_toStartOf="@+id/ic_location"/>
            <TextView
                android:id="@+id/item_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="username"/>
            <TextView
                android:id="@+id/delivery_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="title"
                android:textColor="@color/black"
                android:layout_below="@+id/item_username"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/d10">

            <ImageView
                android:id="@+id/chat_box"
                android:layout_width="@dimen/d50"
                android:layout_height="@dimen/d50"
                android:layout_alignParentBottom="true"
                android:src="@drawable/chat_message_sent_drawable" />

            <ImageView
                android:id="@+id/chat_icon"
                android:layout_width="@dimen/d40"
                android:layout_height="@dimen/d40"
                android:layout_marginStart="@dimen/d5"
                android:paddingBottom="@dimen/d10"
                android:layout_alignParentBottom="true"
                android:src="@drawable/messenger_icon" />


            <ImageView
                android:layout_width="@dimen/d50"
                android:layout_height="@dimen/d50"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/chat_message_sent_drawable"  />
            <ImageView
                android:id="@+id/call_icon"
                android:layout_width="@dimen/d40"
                android:layout_height="@dimen/d40"
                android:paddingBottom="@dimen/d10"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:src="@drawable/phone_call_icon" />

            <ImageView
                android:layout_width="@dimen/d50"
                android:layout_height="@dimen/d50"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:src="@drawable/chat_message_sent_drawable"  />

            <ImageView
                android:id="@+id/whatsapp_icon"
                android:layout_width="@dimen/d40"
                android:layout_height="@dimen/d40"
                android:layout_marginEnd="@dimen/d5"
                android:paddingBottom="@dimen/d10"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/whatsapp_icon" />

        </RelativeLayout>

    </RelativeLayout>






    <ImageView
        android:id="@+id/delivery_icon"
        android:layout_width="@dimen/d50"
        android:layout_height="@dimen/d50"
        android:elevation="@dimen/d10"
        android:layout_marginBottom="-25dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/chat_message_sent_drawable"/>
    <ImageView
        android:layout_width="@dimen/d40"
        android:layout_height="@dimen/d40"
        android:elevation="@dimen/d10"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/delivery_icon"/>

    <ImageView
        android:id="@+id/delivery_delete_icon"
        android:layout_width="@dimen/d25"
        android:layout_height="@dimen/d25"
        android:elevation="@dimen/d10"
        android:src="@drawable/red_cross_icon"/>


</RelativeLayout>