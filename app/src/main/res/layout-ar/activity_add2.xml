<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.AddActivity2">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#009FE3">

        <RelativeLayout
            android:id="@+id/back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/ivBackAddActivity2"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="@dimen/d15"
                android:background="@drawable/right_arrow"
                app:tint="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/post_an_advertisement"
                android:textColor="@color/white"
                android:textSize="20sp" />

        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/header">


        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="16dp"
                        android:background="@color/grey_10" />

                    <LinearLayout
                        android:id="@+id/title_container"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/d70"
                        android:layout_weight="0"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:orientation="horizontal">


                            <TextView
                                android:id="@+id/textView2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_marginLeft="8dp"
                                android:layout_marginTop="@dimen/d20"
                                android:layout_weight="1"
                                android:text="@string/add_title"
                                android:textColor="@color/black"
                                android:textSize="17sp"
                                android:textStyle="bold" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/textView2">

                                <ImageView
                                    android:id="@+id/title_checkbox_status"
                                    android:layout_width="18dp"
                                    android:layout_height="18dp"
                                    android:layout_alignParentEnd="true"
                                    android:layout_weight="0"
                                    android:src="@drawable/checked"
                                    app:tint='#009FE3' />

                                <TextView
                                    android:id="@+id/itemTitle"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="16dp"
                                    android:layout_marginTop="@dimen/d5"
                                    android:layout_toRightOf="@id/title_checkbox_status"
                                    android:background="@null"
                                    android:ems="10"
                                    android:hint="@string/hint_add_title"
                                    android:inputType="textPersonName"
                                    android:maxLength="70"
                                    android:textSize="16sp" />
                            </RelativeLayout>

                        </RelativeLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/d5"
                        android:background="@color/light_grey" />

                    <LinearLayout
                        android:id="@+id/description_container"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/d70"
                        android:layout_weight="0"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:orientation="horizontal">


                            <TextView
                                android:id="@+id/tvDescription"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_marginLeft="8dp"
                                android:layout_marginTop="@dimen/d20"
                                android:layout_weight="1"
                                android:text="@string/add_description"
                                android:textColor="@color/black"
                                android:textSize="17sp"
                                android:textStyle="bold" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/tvDescription">

                                <ImageView
                                    android:id="@+id/description_checkbox_status"
                                    android:layout_width="18dp"
                                    android:layout_height="18dp"
                                    android:layout_alignParentEnd="true"
                                    android:layout_weight="0"
                                    android:src="@drawable/checked"
                                    android:visibility="gone"
                                    app:tint='#009FE3' />

                                <TextView
                                    android:id="@+id/itemDescription"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="16dp"
                                    android:layout_marginTop="@dimen/d5"
                                    android:layout_toRightOf="@id/description_checkbox_status"
                                    android:background="@null"
                                    android:ems="10"
                                    android:hint="@string/hint_add_description"
                                    android:inputType="textPersonName"
                                    android:maxLength="70"
                                    android:textSize="16sp" />
                            </RelativeLayout>

                        </RelativeLayout>

                        <TextView
                            android:id="@+id/titleErrorLabel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginRight="16dp"
                            android:text="@string/confirm_input"
                            android:textColor="@color/error"
                            android:visibility="gone" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/d5"
                        android:background="@color/light_grey" />

                    <LinearLayout
                        android:id="@+id/option_container"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="16dp"
                        android:layout_weight="0"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:layout_alignParentEnd="true"
                                android:layout_weight="0"
                                android:src="@drawable/ic_checkbox_gray"
                                android:visibility="gone" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_marginLeft="8dp"
                                android:layout_weight="1"
                                android:text="@string/method_of_communication"
                                android:textColor="@color/black"
                                android:textSize="17sp"
                                android:textStyle="bold" />

                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="16dp"
                            android:background="@color/content_page"
                            android:orientation="horizontal"
                            android:padding="8dp">

                            <Spinner
                                android:id="@+id/optionChoiceCategory"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:spinnerMode="dropdown" />

                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/d30"
                        android:background="@color/light_grey" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="16dp"
                        android:layout_weight="0"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginRight="16dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/subcategory_checkbox_status"
                                android:layout_width="50dp"
                                android:layout_height="@dimen/d40"
                                android:layout_alignParentEnd="true"
                                android:layout_centerInParent="true"
                                android:layout_marginEnd="@dimen/d10"
                                android:src="@drawable/sw_no" />

                            <TextView
                                android:id="@+id/textViewSubcategory"
                                android:layout_width="wrap_content"
                                android:layout_height="50dp"
                                android:layout_alignParentStart="true"
                                android:layout_marginLeft="8dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="@string/show_mobile_number"
                                android:textColor="@color/black"
                                android:textSize="17sp"
                                android:textStyle="bold" />

                        </RelativeLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/d10"
                            android:padding="@dimen/d10"
                            android:text="+9665551112"
                            android:textAlignment="viewStart"
                            android:textColor="@color/black"
                            android:textSize="17sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@color/content_page">

                    <Button
                        android:id="@+id/adContinueBtn"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_below="@+id/categoryLayout2"
                        android:layout_marginStart="@dimen/d20"
                        android:layout_marginTop="@dimen/d50"
                        android:layout_marginEnd="@dimen/d20"
                        android:background="#009FE3"
                        android:text="@string/submit"
                        android:textColor="@color/white"
                        android:textSize="17sp" />

                </FrameLayout>

            </LinearLayout>

        </ScrollView>
    </RelativeLayout>

</RelativeLayout>