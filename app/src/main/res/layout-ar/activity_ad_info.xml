<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.AdInfoActivity">

    <RelativeLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d50"
        android:background="#009FE3"
        android:orientation="horizontal"
        android:paddingTop="10dp">

        <RelativeLayout
            android:id="@+id/backInfoBtn"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:gravity="center">

            <ImageView
                android:layout_width="@dimen/d25"
                android:layout_height="@dimen/d25"
                android:layout_gravity="center"
                android:src="@drawable/right_arrow" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            android:gravity="center">

            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:layout_alignParentEnd="true"
            android:gravity="center">

            <ImageView
                android:layout_width="@dimen/d25"
                android:layout_height="@dimen/d25"
                android:layout_gravity="center"
                android:src="@drawable/export"
                app:tint="@color/white" />

        </RelativeLayout>


    </RelativeLayout>


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/topBar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/top_layout"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:visibility="gone">

                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/adInfoViewPager"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:fitsSystemWindows="true"
                    android:scrollbars="none" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/linInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/top_layout"
                android:background="@color/lemon_chiffon_light"
                android:orientation="vertical"
                android:padding="@dimen/d10">

                <TextView
                    android:id="@+id/item_title"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/d30"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="10dp"
                    android:maxLines="2"
                    android:textColor="@color/forest_green"
                    android:textSize="21sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="@dimen/d15"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.2"
                            android:gravity="right|center"
                            android:visibility="visible">

                            <ImageView
                                android:layout_width="14dp"
                                android:layout_height="14dp"
                                android:layout_gravity="center"
                                android:src="@drawable/clock"
                                app:tint="@color/gray_text" />

                            <TextView
                                android:id="@+id/item_user_postedb"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginRight="5dp"
                                android:text="@string/posted_on"
                                android:textColor="@color/gray_text"
                                android:textSize="17sp" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/d30"
                            android:layout_weight="0.8"
                            android:gravity="right|center">

                            <TextView
                                android:id="@+id/item_locatio"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:textSize="17sp"
                                app:tint="@color/gray_text" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/d15"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.2"
                            android:gravity="right|center"
                            android:visibility="visible">

                            <ImageView
                                android:layout_width="14dp"
                                android:layout_height="14dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_user"
                                app:tint="#009FE3" />

                            <TextView
                                android:id="@+id/item_user_postedby"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginRight="5dp"
                                android:text="@string/user_name"
                                android:textColor="@color/royal_blue"
                                android:textSize="17sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/d30"
                            android:layout_weight="0.8"
                            android:gravity="right|center">

                            <ImageView
                                android:layout_width="14dp"
                                android:layout_height="14dp"
                                android:layout_gravity="start"
                                android:src="@drawable/pin"
                                app:tint="@color/royal_blue" />


                            <TextView
                                android:id="@+id/item_location"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginRight="5dp"
                                android:text="@string/location"
                                android:textColor="#009FE3"
                                android:textSize="17sp" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/linInfo"
                android:background="@color/grey_10" />

            <LinearLayout
                android:id="@+id/descriptionLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view"
                android:background="@color/grey_5"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="@dimen/d10"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="@dimen/d10"
                    android:layout_marginEnd="@dimen/d10"
                    android:lineSpacingExtra="15dp"
                    android:text="@string/dog_info"
                    android:textColor="@color/black"
                    android:textSize="17sp" />

            </LinearLayout>

            <View
                android:id="@+id/viewDescription"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/descriptionLayout"
                android:background="@color/grey_10" />


            <ImageView
                android:id="@+id/icon_home"
                android:layout_width="match_parent"
                android:layout_height="235dp"
                android:layout_below="@+id/viewDescription"
                android:layout_marginTop="@dimen/d5"
                android:src="@drawable/ic_item1" />

            <ImageView
                android:id="@+id/icon_home2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/d230"
                android:layout_below="@+id/icon_home"
                android:src="@drawable/ic_item4" />


            <LinearLayout
                android:id="@+id/title_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/icon_home2"
                android:background="@color/lemon_chiffon_light"
                android:orientation="vertical"
                android:padding="@dimen/d15">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="16dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/title_checkbox_status"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_alignParentStart="true"
                        android:src="@drawable/phone_call"
                        app:tint="@color/royal_blue" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dp"
                        android:layout_toLeftOf="@id/title_checkbox_status"
                        android:layout_weight="1"
                        android:text="55112121231"
                        android:textColor="@color/black"
                        android:textSize="17sp" />

                </RelativeLayout>


            </LinearLayout>

            <View
                android:id="@+id/view3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/title_container"
                android:background="@color/grey_10" />

            <LinearLayout
                android:id="@+id/title_container1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/view3"
                android:layout_weight="0"
                android:background="@color/grey_5"
                android:orientation="vertical"
                android:padding="@dimen/d15">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="16dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/title_checkbox_status1"
                        android:layout_width="@dimen/d24"
                        android:layout_height="@dimen/d24"
                        android:layout_alignParentStart="true"
                        android:src="@drawable/email"
                        app:tint="@color/royal_blue" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="8dp"
                        android:layout_toLeftOf="@id/title_checkbox_status1"
                        android:layout_weight="1"
                        android:text="بريد"
                        android:textColor="@color/black"
                        android:textSize="17sp" />

                </RelativeLayout>


            </LinearLayout>

            <View
                android:id="@+id/view4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/title_container1"
                android:background="@color/grey_10" />

            <TextView
                android:id="@+id/tvTitlee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view4"
                android:layout_alignParentStart="true"
                android:layout_marginStart="@dimen/d15"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="@dimen/d10"
                android:layout_marginEnd="@dimen/d5"
                android:text="@string/sample_text"
                android:textColor="@color/gray_text"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/tvTitlee2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvTitlee"
                android:layout_alignParentStart="true"
                android:layout_marginStart="@dimen/d15"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="@dimen/d5"
                android:text="@string/sample_text"
                android:textColor="@color/gray_text"
                android:textSize="17sp" />

            <LinearLayout
                android:id="@+id/title_container4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/tvTitlee2"
                android:layout_marginTop="@dimen/d10"
                android:layout_weight="0"
                android:background="@color/grey_5"
                android:orientation="vertical"
                android:padding="@dimen/d15">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="16dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/title_checkbox_status4"
                                android:layout_width="@dimen/d24"
                                android:layout_height="@dimen/d24"
                                android:layout_alignParentStart="true"
                                android:src="@drawable/ic_flag"
                                app:tint="@color/gray_text" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="@dimen/d24"
                                android:layout_height="@dimen/d24"
                                android:layout_alignParentStart="true"
                                android:src="@drawable/heart"
                                app:tint="@color/gray_text" />

                        </LinearLayout>


                    </LinearLayout>


                </RelativeLayout>


            </LinearLayout>

            <View
                android:id="@+id/viewFavourite"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/title_container4"
                android:background="@color/grey_10" />

            <LinearLayout
                android:id="@+id/title_share"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/viewFavourite"
                android:layout_weight="0"
                android:background="@color/grey_5"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/d15">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/share_status4"
                        android:layout_width="@dimen/d24"
                        android:layout_height="@dimen/d24"
                        android:layout_centerInParent="true"
                        android:src="@drawable/icon_share"
                        app:tint="@color/gray_text" />

                </RelativeLayout>


            </LinearLayout>

            <View
                android:id="@+id/viewShare"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/title_share"
                android:background="@color/grey_10" />

            <LinearLayout
                android:id="@+id/title_comment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/viewShare"
                android:layout_weight="0"
                android:background="@color/grey_5"
                android:orientation="vertical"
                android:paddingLeft="@dimen/d15"
                android:paddingTop="@dimen/d15"
                android:paddingRight="@dimen/d15"
                android:paddingBottom="@dimen/d5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.4"
                        android:gravity="right|center"
                        android:visibility="visible">

                        <ImageView
                            android:layout_width="17dp"
                            android:layout_height="17dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_user"
                            app:tint="@color/royal_blue" />

                        <TextView
                            android:id="@+id/commentUsername"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginRight="5dp"
                            android:text="zoya123"
                            android:textColor="@color/royal_blue"
                            android:textSize="17sp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/d30"
                        android:layout_weight="0.6"
                        android:gravity="right|center">

                        <TextView
                            android:id="@+id/ivUsername"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:text="@string/user_name"
                            android:textSize="17sp"
                            app:tint="@color/gray_text" />
                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/commentTextview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvTitlee"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="@dimen/d5"
                    android:text="@string/sample_text"
                    android:textColor="@color/blackish"
                    android:textSize="17sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/d15">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/flagComment"
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_alignParentEnd="true"
                            android:src="@drawable/ic_flag"
                            app:tint="@color/gray_text" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="8dp"
                            android:layout_toLeftOf="@id/flagComment"
                            android:layout_weight="1"
                            android:text="أكتب تعليقا"
                            android:textColor="@color/black"
                            android:textSize="17sp"
                            android:visibility="gone" />

                    </RelativeLayout>


                </LinearLayout>


            </LinearLayout>

            <View
                android:id="@+id/commentView"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/title_comment"
                android:background="@color/grey_10" />

            <!--Comment Button Layout-->
            <RelativeLayout
                android:id="@+id/commentLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/commentView"
                android:background="@color/grey_5"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/d15">

                <TextView
                    android:id="@+id/commentTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    android:text="أكتب تعليقا"
                    android:textColor="@color/royal_blue"
                    android:textSize="17sp" />

                <ImageView
                    android:id="@+id/title_checkbox_comment"
                    android:layout_width="@dimen/d24"
                    android:layout_height="@dimen/d24"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="5dp"
                    android:layout_toLeftOf="@id/commentTv"
                    android:src="@drawable/messenger"
                    app:tint="@color/royal_blue" />


            </RelativeLayout>

            <View
                android:id="@+id/view5"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/commentLayout"
                android:background="@color/grey_10" />


            <LinearLayout
                android:id="@+id/title_rss"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/view5"
                android:layout_weight="0"
                android:orientation="vertical"
                android:paddingTop="@dimen/d15"
                android:paddingBottom="@dimen/d15">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="16dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/title_checkbox_css"
                        android:layout_width="@dimen/d24"
                        android:layout_height="@dimen/d24"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/rss"
                        app:tint="@color/gray_text" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="8dp"
                        android:layout_toLeftOf="@id/title_checkbox_css"
                        android:layout_weight="1"
                        android:text="أكتب تعليقا"
                        android:textColor="@color/black"
                        android:textSize="17sp"
                        android:visibility="gone" />

                </RelativeLayout>


            </LinearLayout>

            <TextView
                android:id="@+id/textVieww"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title_rss"
                android:layout_marginTop="@dimen/d20"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:gravity="start"
                android:text="الإعلانات ذات الصلة"
                android:textAlignment="viewStart"
                android:textColor="@color/gray_text"
                android:textSize="17sp" />

            <LinearLayout
                android:id="@+id/relatedAdsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textVieww"
                android:gravity="center"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginLeft="@dimen/d10"
                    android:layout_marginTop="@dimen/d10"
                    android:layout_marginRight="@dimen/d10"
                    app:cardCornerRadius="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="5dp"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="140dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/ic_item1" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginLeft="@dimen/d10"
                    android:layout_marginTop="@dimen/d10"
                    android:layout_marginRight="@dimen/d10"
                    app:cardCornerRadius="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="5dp"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="140dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/ic_item1" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginLeft="@dimen/d10"
                    android:layout_marginTop="@dimen/d10"
                    android:layout_marginRight="@dimen/d10"
                    app:cardCornerRadius="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="5dp"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="140dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/ic_item1" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/relatedAdsLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/relatedAdsLayout"
                android:gravity="center"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
